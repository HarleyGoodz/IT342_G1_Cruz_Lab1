<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:padding="8dp"
                android:background="@drawable/icon_background"
                app:tint="#38bdf8"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#38bdf8"
                android:gravity="center"
                android:layout_marginEnd="40dp" />
        </LinearLayout>

        <!-- Profile Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#E60f172a"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Profile Avatar -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/userAvatarLarge"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:text="JD"
                        android:textSize="48sp"
                        android:textColor="#020617"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/avatar_background" />

                    <!-- Edit Icon -->
                    <TextView
                        android:id="@+id/btnEditAvatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="âœï¸"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/edit_icon_bg"
                        android:layout_gravity="bottom|end"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>

                <!-- User Name -->
                <TextView
                    android:id="@+id/txtProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#e5e7eb"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/txtProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@rateflow.com"
                    android:textSize="15sp"
                    android:textColor="#94a3b8"
                    android:layout_marginBottom="16dp" />

                <!-- Member Since -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/badge_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ‰"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/txtMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member since Jan 2024"
                        android:textSize="13sp"
                        android:textColor="#38bdf8"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="20dp">

            <!-- Ratings Given -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/stat_item_bg"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="28sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtRatingsGiven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#e5e7eb"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ratings"
                    android:textSize="11sp"
                    android:textColor="#94a3b8" />
            </LinearLayout>

            <!-- Reviews Written -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/stat_item_bg"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¬"
                    android:textSize="28sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtReviewsWritten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#e5e7eb"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="11sp"
                    android:textColor="#94a3b8" />
            </LinearLayout>

            <!-- Items Rated -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/stat_item_bg"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦"
                    android:textSize="28sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtItemsRated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#e5e7eb"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textSize="11sp"
                    android:textColor="#94a3b8" />
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Options Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#E60f172a"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Edit Profile -->
                <LinearLayout
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="âœï¸"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/menu_icon_bg"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:textSize="15sp"
                            android:textColor="#e5e7eb"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update your personal information"
                            android:textSize="12sp"
                            android:textColor="#64748b"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:textColor="#64748b" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1e293b"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ”’"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/menu_icon_bg"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Password"
                            android:textSize="15sp"
                            android:textColor="#e5e7eb"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update your account security"
                            android:textSize="12sp"
                            android:textColor="#64748b"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:textColor="#64748b" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1e293b"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <!-- Notifications Settings -->
                <LinearLayout
                    android:id="@+id/btnNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ””"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/menu_icon_bg"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textSize="15sp"
                            android:textColor="#e5e7eb"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage notification preferences"
                            android:textSize="12sp"
                            android:textColor="#64748b"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:textColor="#64748b" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1e293b"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <!-- Privacy Settings -->
                <LinearLayout
                    android:id="@+id/btnPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ›¡ï¸"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/menu_icon_bg"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy and Security"
                            android:textSize="15sp"
                            android:textColor="#e5e7eb"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control your privacy settings"
                            android:textSize="12sp"
                            android:textColor="#64748b"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:textColor="#64748b" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Logout"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ef4444"
            app:icon="@android:drawable/ic_lock_power_off"
            app:iconGravity="textStart"
            app:iconTint="#ef4444"
            app:strokeColor="#ef4444"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />

        <!-- Delete Account -->
        <TextView
            android:id="@+id/btnDeleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete Account"
            android:textSize="14sp"
            android:textColor="#64748b"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>