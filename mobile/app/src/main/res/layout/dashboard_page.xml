<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#E60f172a"
                app:title="RateFlow"
                app:titleTextColor="#38bdf8"
                app:navigationIcon="@android:drawable/ic_menu_sort_by_size"
                app:navigationIconTint="#38bdf8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingEnd="16dp">

                    <!-- Notification Icon -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/btnNotifications"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_popup_reminder"
                            android:padding="8dp"
                            android:background="@drawable/icon_background"
                            app:tint="#38bdf8"
                            android:clickable="true"
                            android:focusable="true" />

                        <!-- Notification Badge -->
                        <TextView
                            android:id="@+id/notificationBadge"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:text="3"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/notification_badge"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp" />
                    </FrameLayout>

                    <!-- User Avatar -->
                    <TextView
                        android:id="@+id/userAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="U"
                        android:textSize="16sp"
                        android:textColor="#020617"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/avatar_background"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Welcome Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#E60f172a"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â­"
                                android:textSize="48sp"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Welcome back!"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#38bdf8"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/txtUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textSize="16sp"
                                    android:textColor="#94a3b8"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track and manage your ratings effortlessly"
                            android:textSize="14sp"
                            android:textColor="#64748b"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stats Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#e5e7eb"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="16dp">

                    <!-- Total Ratings Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#E60f172a"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“Š"
                                android:textSize="32sp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Ratings"
                                android:textSize="13sp"
                                android:textColor="#94a3b8"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtTotalRatings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2,543"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#e5e7eb"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+12.5% this month"
                                android:textSize="12sp"
                                android:textColor="#10b981"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Average Rating Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#E60f172a"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â­"
                                android:textSize="32sp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg. Rating"
                                android:textSize="13sp"
                                android:textColor="#94a3b8"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtAvgRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#e5e7eb"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0.3 from last week"
                                android:textSize="12sp"
                                android:textColor="#10b981"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Second Row Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="24dp">

                    <!-- Active Items Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#E60f172a"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¦"
                                android:textSize="32sp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Items"
                                android:textSize="13sp"
                                android:textColor="#94a3b8"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtActiveItems"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#e5e7eb"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+8 new today"
                                android:textSize="12sp"
                                android:textColor="#10b981"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Reviews Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#E60f172a"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¬"
                                android:textSize="32sp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reviews"
                                android:textSize="13sp"
                                android:textColor="#94a3b8"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/txtReviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="892"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#e5e7eb"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24 pending"
                                android:textSize="12sp"
                                android:textColor="#f59e0b"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#e5e7eb"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="24dp">

                    <!-- Add Rating Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddRating"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Add Rating"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#020617"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconGravity="textStart"
                        app:iconTint="#020617"
                        app:backgroundTint="@null"
                        android:background="@drawable/button_gradient"
                        app:cornerRadius="12dp"
                        app:elevation="6dp" />

                    <!-- View All Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAll"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="View All"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#38bdf8"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconGravity="textStart"
                        app:iconTint="#38bdf8"
                        app:strokeColor="#38bdf8"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp" />
                </LinearLayout>

                <!-- Recent Activity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#E60f172a"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Recent Activity"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#e5e7eb" />

                            <TextView
                                android:id="@+id/btnViewAllActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View All â†’"
                                android:textSize="14sp"
                                android:textColor="#38bdf8"
                                android:textStyle="bold"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp" />
                        </LinearLayout>

                        <!-- Activity Item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="â­"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New 5-star rating received"
                                    android:textSize="14sp"
                                    android:textColor="#e5e7eb"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 minutes ago"
                                    android:textSize="12sp"
                                    android:textColor="#64748b"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Activity Item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="ðŸ’¬"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Review submitted for approval"
                                    android:textSize="14sp"
                                    android:textColor="#e5e7eb"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 hour ago"
                                    android:textSize="12sp"
                                    android:textColor="#64748b"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Activity Item 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            >

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="ðŸ“¦"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New item added to catalog"
                                    android:textSize="14sp"
                                    android:textColor="#e5e7eb"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 hours ago"
                                    android:textSize="12sp"
                                    android:textColor="#64748b"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabQuickRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:src="@android:drawable/ic_input_add"
            app:tint="#020617"
            app:backgroundTint="#38bdf8"
            app:elevation="8dp"
            app:borderWidth="0dp"
            android:contentDescription="Quick Rate" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E60f172a"
        app:itemIconTint="#38bdf8"
        app:itemTextColor="#e5e7eb"
        />

</androidx.drawerlayout.widget.DrawerLayout>