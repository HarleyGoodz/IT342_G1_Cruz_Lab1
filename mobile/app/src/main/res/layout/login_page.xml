<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Login Card Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                app:cardBackgroundColor="#E60f172a"
                app:cardCornerRadius="24dp"
                app:cardElevation="24dp"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="48dp">

                    <!-- Decorative Icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡"
                        android:textSize="48sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:shadowColor="#38bdf8"
                        android:shadowRadius="8" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#38bdf8"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in to continue to your account"
                        android:textSize="15sp"
                        android:textColor="#94a3b8"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp" />

                    <!-- Username Input Container -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/usernameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Username"
                            android:inputType="textPersonName"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input Container -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="#64748b"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Forgot Password -->
                    <TextView
                        android:id="@+id/txtForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="#38bdf8"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:padding="8dp"
                        android:layout_marginBottom="24dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Login Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Sign In"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#020617"
                        android:letterSpacing="0.02"
                        app:backgroundTint="@null"
                        android:background="@drawable/button_gradient"
                        app:cornerRadius="12dp"
                        app:elevation="8dp"
                        />

                    <!-- Divider with Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#1e293b" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OR"
                            android:textColor="#64748b"
                            android:textSize="12sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#1e293b" />
                    </LinearLayout>

                    <!-- Register Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account? "
                            android:textColor="#94a3b8"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtRegister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Up"
                            android:textColor="#38bdf8"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>