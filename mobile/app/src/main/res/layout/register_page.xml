<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Registration Card Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                app:cardBackgroundColor="#E60f172a"
                app:cardCornerRadius="24dp"
                app:cardElevation="24dp"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="48dp">

                    <!-- Decorative Icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨"
                        android:textSize="48sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:shadowColor="#38bdf8"
                        android:shadowRadius="8" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Account"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#38bdf8"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up to get started with your account"
                        android:textSize="15sp"
                        android:textColor="#94a3b8"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp" />

                    <!-- Full Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fullNameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email Address"
                            android:inputType="textEmailAddress"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Username Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/usernameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_menu_edit"
                        app:startIconTint="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Username"
                            android:inputType="textPersonName"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="#64748b"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748b"
                        app:helperText="Minimum 8 characters"
                        app:helperTextTextColor="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirm Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/confirmPasswordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#99020617"
                        app:boxStrokeColor="@color/input_stroke_color"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#38bdf8"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="#64748b"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748b">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:textColor="#e5e7eb"
                            android:textColorHint="#475569"
                            android:textSize="15sp"
                            android:padding="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Register Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Create Account"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#020617"
                        android:letterSpacing="0.02"
                        app:backgroundTint="@null"
                        android:background="@drawable/button_gradient"
                        app:cornerRadius="12dp"
                        app:elevation="8dp"
                        />

                    <!-- Login Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account? "
                            android:textColor="#94a3b8"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign In"
                            android:textColor="#38bdf8"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>